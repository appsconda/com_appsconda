<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\Appsconda\Administrator\Field">
	<fieldset name="details">

       <field name="id" type="text" default="0" label="COM_APPSCONDA_FORM_LBL_DRAWERMENU_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 
		
		<field
			name="menu1content"
			type="textfield"
			label="COM_APPSCONDA_WEBVIEWMENU_MENU1CONTENT_LBL"
			description="COM_APPSCONDA_WEBVIEWMENU_MENU1CONTENT_DESC"
			default=""
			/>
	
		<field
			name="menu1access"
			type="list"
			label="COM_APPSCONDA_DRAWERMENU_MENU1ACCESS_LBL"
			description="COM_APPSCONDA_DRAWERMENU_MENU1ACCESS_DESC"
			class="inputbox"
			size="1"
			default=""
			>
			<option value="false">No</option>
			<option value="true">Yes</option>
		</field>
	
		<field
			name="menu1icon"
			type="media"
			label="COM_APPSCONDA_DRAWERMENU_MENU1ICON_LBL"
			description="COM_APPSCONDA_DRAWERMENU_MENU1ICON_DESC"
			default=""
			/>
	
		<field
			name="menu1color"
			type="color"
			label="COM_APPSCONDA_DRAWERMENU_MENU1COLOR_LBL"
			description="COM_APPSCONDA_DRAWERMENU_MENU1COLOR_DESC"
			default=""
			/>
	
		<field
			name="menu1label"
			type="textfield"
			label="COM_APPSCONDA_DRAWERMENU_MENU1LABEL_LBL"
			description="COM_APPSCONDA_DRAWERMENU_MENU1LABEL_DESC"
			default=""
			/>
	
		<field
			name="menu1show"
			type="list"
			label="COM_APPSCONDA_DRAWERMENU_MENU1SHOW_LBL"
			description="COM_APPSCONDA_DRAWERMENU_MENU1SHOW_DESC"
			class="inputbox"
			size="1"
			required="true"
			default=""
			>
			<option value="false">No</option>
			<option value="true">Yes</option>
		</field>

	   
	
		<field
			name="created_by"
			type="createdby"
			label="COM_APPSCONDA_DRAWERMENU_CREATED_BY_LBL"
			description="COM_APPSCONDA_DRAWERMENU_CREATED_BY_DESC"
			default=""
			/>
	
		<field
			name="state"
			type="list"
			label="COM_APPSCONDA_DRAWERMENU_STATE_LBL"
			description="COM_APPSCONDA_DRAWERMENU_STATE_DESC"
			class="inputbox"
			size="1"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
	
		<field
			name="ordering"
			type="hidden"
			label="COM_APPSCONDA_DRAWERMENU_ORDERING_LBL"
			description="COM_APPSCONDA_DRAWERMENU_ORDERING_DESC"
			default="0"
			/>

	</fieldset>
</form>
