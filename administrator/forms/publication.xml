<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\Appsconda\Administrator\Field">
	<fieldset name="details">

       <field name="id" type="text" default="0" label="COM_APPSCONDA_FORM_LBL_PUBLICATION_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

	   <field
			name="created_by"
			type="createdby"
			label="COM_APPSCONDA_PUBLICATION_CREATED_BY_LBL"
			hint="COM_APPSCONDA_PUBLICATION_CREATED_BY_DESC"
			default=""
			/>
	
		<field
			name="state"
			type="list"
			label="COM_APPSCONDA_PUBLICATION_STATE_LBL"
			hint="COM_APPSCONDA_PUBLICATION_STATE_DESC"
			class="inputbox"
			size="1"
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
	
		<field
			name="ordering"
			type="hidden"
			label="COM_APPSCONDA_PUBLICATION_ORDERING_LBL"
			hint="COM_APPSCONDA_PUBLICATION_ORDERING_DESC"
			default="0"
			/>

	</fieldset>
</form>
